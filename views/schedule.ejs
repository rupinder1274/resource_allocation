  // Function to initialize Select2 on a specific selector
  function initializeSelect2(selector) {
    // Wait for jQuery and Select2 to be available
    if (typeof window.jQuery !== 'undefined' && window.jQuery.fn.select2) {
      try {
        const $element = window.jQuery(selector);
        
        // Check if Select2 is already initialized
        if ($element.hasClass('select2-hidden-accessible')) {
          return; // Already initialized
        }
        
        $element.select2({
          theme: 'bootstrap-5',
          placeholder: '-- Select Project --',
          allowClear: true,
          width: '100%',
          dropdownAutoWidth: true,
          // Ensure single selection mode
          multiple: false,
          // Enable search on focus - when you click the dropdown, search box gets focus
          selectOnClose: false,
          // Open dropdown immediately when focused
          openOnEnter: true,
          // Disable tags mode
          tags: false,
          language: {
            noResults: function() {
              return "No projects found";
            },
            searching: function() {
              return "Searching projects...";
            },
            inputTooShort: function() {
              return "Start typing to search projects...";
            }
          },
          // Ensure search is always enabled and visible
          minimumResultsForSearch: 0,
          // Custom search matcher for better filtering
          matcher: function(params, data) {
            // If there are no search terms, return all data
            if ($.trim(params.term) === '') {
              return data;
            }
            
            // Check if the text contains the search term (case insensitive)
            if (data.text.toLowerCase().indexOf(params.term.toLowerCase()) > -1) {
              return data;
            }
            
            // Return null if the term doesn't match
            return null;
          }
        });

        // Auto-focus search when dropdown opens
        $element.on('select2:open', function () {
          setTimeout(function() {
            const searchField = document.querySelector('.select2-search__field');
            if (searchField) {
              searchField.focus();
              searchField.setAttribute('placeholder', 'Start typing to search projects...');
            }
          }, 100);
        });

        // Clear search when dropdown closes
        $element.on('select2:close', function () {
          setTimeout(function() {
            const searchField = document.querySelector('.select2-search__field');
            if (searchField) {
              searchField.value = '';
            }
          }, 100);
        });

        // Add keyboard support for better UX
        $element.on('select2:opening', function () {
          // Store original selection for potential restoration
          const currentSelection = $element.val();
          $element.data('original-selection', currentSelection);
        });
      } catch (error) {
        console.warn('Failed to initialize Select2:', error);
        // Fallback: retry after delay
        setTimeout(() => initializeSelect2(selector), 200);
      }
    } else {
      // Retry after a short delay if libraries aren't loaded yet
      setTimeout(() => initializeSelect2(selector), 100);
    }
  }

