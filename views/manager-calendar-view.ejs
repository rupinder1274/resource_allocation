  $('#waveLoadingOverlay').removeClass('hide').addClass('show');
  $('#mainContent').hide();
  initializeWave();
  startWaveAnimation();
  startWaveProgress();
}

function hideWaveLoader() {
  $('#waveLoadingOverlay').removeClass('show').addClass('hide');
  setTimeout(() => {
    $('#waveLoadingOverlay').hide();
    $('#mainContent').fadeIn(300);
  }, 200);
}

function startWaveAnimation() {
  // Animate wave movement - medium speed animation
  setInterval(() => {
    wavePhase += 0.08; // Medium speed wave movement
    initializeWave();
    updateProgressWave(waveProgress);
  }, 40); // Medium animation refresh rate
}

function startWaveProgress() {
  waveAnimationInterval = setInterval(() => {
    // Medium loading progression
    if (waveProgress < 40) {
      waveProgress += Math.random() * 8 + 6; // Medium initial loading (2-6% per tick)
    } else if (waveProgress < 80) {
      waveProgress += Math.random() * 6 + 4; // Medium speed (2-5% per tick)
    } else if (waveProgress < 95) {
      waveProgress += Math.random() * 4 + 2; // Slower medium speed (1-3% per tick)
    } else {
      waveProgress += Math.random() * 2 + 1; // Gentle final stretch (0.5-1.5% per tick)
    }
    
    if (waveProgress >= 100) {
      waveProgress = 100;
      clearInterval(waveAnimationInterval);
    }
    
    $('#waveProgressPercent').text(Math.floor(waveProgress));
    updateProgressWave(waveProgress);
    
    // Auto-hide when complete
    if (waveProgress >= 100) {
      setTimeout(() => {
        hideWaveLoader();
      }, 200); // Medium delay before hiding
    }
